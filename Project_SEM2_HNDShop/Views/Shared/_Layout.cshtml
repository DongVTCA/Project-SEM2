<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Project_SEM2_HNDShop</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
          integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
            integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
            crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
            integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
            crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
            integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
            crossorigin="anonymous"></script>
      <link rel="stylesheet" href="~/css/register.css" />      
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/index.css" />
</head>
<body>

    <header>
        <div class="card headerweb">
            <div class="navigation">
                <div class="container-fluid">
                    <nav class="navbar navbar-expand-lg navbar-dark">
                        <button class="navbar-toggler" type="button" data-toggle="collapse"
                                data-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false"
                                aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
                            <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                                <li class="nav-item dropdown">
                                    <a class="nav-link text-light" href="#" id="navbarDropdownMenuLink"
                                       data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        Brands
                                    </a>
                                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                        @foreach (var item in ViewData["subbrand"] as List<SubBrand>)
                                        {
                                            <a class="dropdown-item" href="#">@item.SubBrandName</a>
                                        }
                                      
                                    </div>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link text-light" href="#" id="navbarDropdownMenuLink"
                                       data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        Categories
                                    </a>
                                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                        @foreach (var item in ViewData["category"] as List<Category>)
                                        {
                                            <a class="dropdown-item" href="#">@item.CateType</a>
                                        }
                                       
                                    </div>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link text-light" href="#" id="navbarDropdownMenuLink"
                                       data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        Promotions
                                    </a>
                                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                        @foreach (var item in ViewData["promotion"] as List<Promotion>)
                                        {
                                            <a class="dropdown-item" href="#">@item.PromoTitle</a>
                                        }
                                    </div>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light" href="#">Order Tracker</a>
                                </li>
                            </ul>
                            <ul class="navbar-nav ml-auto">
                                <li class="nav-item dropdown">
                                    @if (@ViewBag.sessionName != null)
                                    {
                                        <a class="nav-link text-light" href="#" id="navbarDropdownMenuLink"
                                           data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            Hello @ViewBag.sessionName
                                        </a>
                                        <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                            <a class="dropdown-item" href="#">Profile</a>
                                            <a class="dropdown-item" href="#">Change Password</a>
                                            <a class="dropdown-item" asp-controller="Home" asp-action="Logout">Logout</a>
                                        </div>
                                    }
                                    else
                                    {
                                        <a asp-action="Login" asp-controller="Home" class="nav-link text-light"
                                           aria-haspopup="true" aria-expanded="false">
                                            Login
                                        </a>
                                    }
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light" href="#">Cart</a>
                                </li>
                            </ul>
                        </div>
                    </nav>
                </div>
            </div>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

   <footer>
        <div class="">
            <div class="row ">
                <div class="top10">
                    <h4>Trending</h4>
                    <a href="">Black Friday</a><br>
                    <a href="">Cyber Monday</a><br>
                    <a href="">Casual Shoes</a><br>
                    <a href="">Slip On Shoes</a><br>
                    <a href="">Camo Clothings</a><br>
                    <a href="">Burgundy Shoes</a><br>
                    <a href="">Leather Sneakers</a><br>

                </div>
                <div class="top10">
                    <h4>Customer Supports</h4>
                    <a href="">Get Helps</a><br>
                    <a href="">Track Order</a><br>
                    <a href="">Return and Refund </a><br>
                    <a href="">Sizing</a><br>
                    <a href="">Promotions</a><br>
                    <a href="">How To Clean</a><br>
                    <a href=""> Store Locator</a><br>
                    <a href="">Site Map</a><br>

                </div>
                <div class="top10">
                    <h4>Company Info</h4>
                    <a href="">About Us</a><br>
                    <a href="">Careers</a><br>
                    <a href="">Press</a><br>
                    <a href="">Affiliates</a><br>
                    <a href="">Military Discount</a><br>
                    <a href="">Students Discount</a><br>
                    <a href="">Mobile App</a><br>
                    <a href="">Creator Club</a><br>
                    

                </div>

                <div class="top10">
                    <h4>Contact With Us</h4>
                    <div class="row container">
                        <a class="icon" href="https://www.facebook.com/adidasoriginals/">
                            <div class="icons8-facebook-old"></div>
                        </a>
                        <a class="icon" href="https.facebook.com">
                            <div id="icon" class="icons8-instagram"></div>
                        </a>
                        <a class="icon" href="https.facebook.com">
                            <div id="icon" class="icons8-twitter"></div>
                        </a>
                    </div>
                </div>
            </div>

        </div>

        <div class="container-fluid">
            <div class="cop">
                &copy; CoppyRight adidas America Inc
            </div>
        </div>

    </footer>
    <!-- <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script> -->
    @RenderSection("Scripts", required: false)
</body>
</html>
